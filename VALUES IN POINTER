#include <stdio.h>
int main ( )
{
    int a;
    int *p;
    scanf("%d",&a);
    p=&a;
    
    printf("\n value of integer :%d",a);
    printf("\n value of integer :%d",*p );
    printf("\n value of integer :%d",(&a));
    printf("\n address of integer :%u",p);
    printf("\n address of integer :%u",&a);
     return 0;
}
